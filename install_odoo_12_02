###############INSTALL ODOO 08

sudo apt-get install python3-setuptools

#######INSTALL pillow
sudo apt-get install libjpeg-dev zlib1g-dev
sudo apt-get install python3-pip
pip install -I Pillow

#######INSTALL psycopg2
sudo apt-get install libpq-dev python3-dev
pip install psycopg2 -> optionality, read below

#######INSTALL ldap
sudo apt-get install libsasl2-dev libldap2-dev libssl-dev

#######INSTALL greenlet and gevent
sudo apt-get install libevent-dev
pip install greenlet
pip install gevent

#######INSTALL lxml
sudo apt-get install libxml2-dev libxslt-dev
pip install lxml

#######ISSUE psycopg2 version GLIBC_PRIVATE not defined 
# https://github.com/psycopg/psycopg2-wheels/issues/2
pip uninstall psycopg2
pip install --no-binary :all: psycopg2


pip install xlsxwriter
pip install beautifulsoup4
pip install pytesseract
##################DOCKER IMAGES
~$ docker-compose -f x-docker-compose.yml up
~$ docker start image_db_x_1
~$ psql -U $user -h localhost -p xxxx
~$ python odoo.py -c x-server.conf
